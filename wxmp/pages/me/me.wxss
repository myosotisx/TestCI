/* pages/me/me.wxss */

page {
  height: 100%;
}

.pageContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userInfoAvatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userInfoNickName {
  color: #aaa;
  font-size: 32rpx;
  font-weight: bold;
  margin: 100rpx;
}

button {
  width: 300rpx;
  height: 80rpx;
  font-size: 28rpx;
  border: 1rpx solid #999;
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
  margin: 100rpx;
}